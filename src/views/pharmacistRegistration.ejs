            <input type="text" id="education" name="education"> <br>
            <br>
            <br>
            <input type="submit" id="simple_click" class="btn btn-secondary" value="Submit"> <br>
            <div class="box">
                <p style="color: red;text-align: left;"><%= message %></p>
                </div>
        </form>
